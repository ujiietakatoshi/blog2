<div class="contents row" >
  <% @blog2.each do |blog2| %>
<div class="content_post" style="background-image: url(<%= blog2.image %>);">
 <% if user_signed_in? && current_user.id == blog2.user_id %>
        <div class="more">
          
          <ul class="more_list">
          <li>
              <%= link_to '編集', "/blog2/#{blog2.id}/edit", method: :get %>
            </li>
            <li>
          <%= link_to '削除', "/blog2/#{blog2.id}", method: :delete %>
            </li>
          </ul>
        </div>
      <% end %>
        <%= simple_format(blog2.text) %>
       <span class="name">
        <a href="">
        <span>投稿者</span><%= blog2.user_id %>
        </a>
      </span>
    </div>
  <% end %>
   <%= paginate(@blog2) %>
  </div>